@model EmpresaModel

@{
    ViewData["Title"] = "Empresa";
}

<div class="text-center">
    <h1 class="display-4">Cadastre sua Empresa</h1>
</div>

<form asp-action="Create" class="needs-validation" novalidate> 

  <fieldset >
    <legend>Preencha as informações abaixo</legend>
    <div class="mb-3">
      <label for="disabledTextInput" class="form-label">Nome</label>
      <input type="text" id="disabledTextInput" asp-for="Nome" class="form-control" placeholder="Digite o nome da empresa">
    </div>
    <div class="mb-3">
      <label for="disabledTextInput" class="form-label">Nome Fantasia</label>
      <input type="text" id="disabledTextInput" asp-for="NomeFantasia" class="form-control" placeholder="Digite o nome fantasia da empresa">
    </div>
    <div class="mb-3">
      <label for="disabledTextInput" class="form-label">CNPJ</label>
      <input type="text" id="disabledTextInput" asp-for="CNPJ" class="form-control" placeholder="Digite o CNPJ da empresa">
    </div>
   <button type="submit" value="Create" class="btn btn-primary">Cadastrar</button>
  </fieldset>
</form>